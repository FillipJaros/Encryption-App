@model EncryptionApp.Models.CaesarCipherAlgorithm

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/caesarStyle.css" />
<script src="@Url.Content("~/js/caesarJavaScript.js")" rel="text/javascript"></script> 

<div class="container c1">
    <h2 class="display-4 pt-3 text-center">Caesar Cipher</h2><hr><br>
    <h5 class="text-primary pt-1">Cipher/Decipher</h5>
    <p class="lead">You can type uppercase or lowercase letters.</p><br />

    <form method="post" asp-action="Index">
        
        <div class="opt mb-4">
            <div class="sw">
                <label class="lead">Cipher </label>
                <label class="switch">
                    <input type="checkbox" asp-for="SwitchResult">
                    <span class="slider round"> </span>
                </label>
                <label class="lead">Decipher </label>
            </div>
            <div class="rangeSlider">
                <p class="lead">Shift Value:</p>
                <p class="lead" id="slider"></p>
                <input type="range" class="custom-range" asp-for="Shift" min="0" max="25" id="customRange1" oninput="GetValue()">
            </div>

        </div>

        <input class="form-control f1 mt-3" asp-for="InputString" placeholder="a" tabindex="1" id="inp" onkeyup="Validate()" data-placement="top" data-trigger="manual" data-content="Not valid input." required />
        <label for="text" class="form-label">Enter Your Text</label>
        <input type="submit" class="btn btn-outline-primary mb-4" value="Translate" id="subButton" />
        <textarea style="background-color: rgba(0,0,0,.01);" class="form-control f2" placeholder="a" readonly cols="20" rows="8">@ViewBag.Result</textarea>
    </form>
    <script>
        GetValue();
    </script>
</div>